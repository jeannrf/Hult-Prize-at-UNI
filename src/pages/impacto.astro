---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Impacto - Hult Prize at UNI 2026">
    <!-- Fondo Animado Global (Fixed) -->
    <div class="fixed inset-0 z-0 pointer-events-none">
        <!-- Capa Base Sólida -->
        <div class="absolute inset-0 bg-hult-black"></div>

        <!-- Degradado Sutil General -->
        <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_center,_rgba(233,30,140,0.15)_0%,_transparent_80%)]"
        >
        </div>

        <!-- Destellos (Sparkles) -->
        <div
            class="absolute top-[20%] left-[15%] w-1 h-1 bg-white rounded-full animate-twinkle"
        >
        </div>
        <div
            class="absolute top-[50%] right-[10%] w-1.5 h-1.5 bg-hult-magenta rounded-full box-shadow-glow animate-twinkle"
            style="animation-delay: 1.5s;"
        >
        </div>
        <div
            class="absolute bottom-[30%] left-[5%] w-1 h-1 bg-purple-400 rounded-full animate-twinkle"
            style="animation-delay: 3s;"
        >
        </div>
        <div
            class="absolute top-[15%] right-[25%] w-1 h-1 bg-white/50 rounded-full animate-twinkle"
            style="animation-delay: 2.5s;"
        >
        </div>
        <div
            class="absolute bottom-[15%] right-[35%] w-2 h-2 bg-hult-magenta/50 rounded-full blur-[1px] animate-twinkle"
            style="animation-delay: 0.5s;"
        >
        </div>
        <div
            class="absolute top-[40%] left-[40%] w-0.5 h-0.5 bg-white rounded-full animate-twinkle"
            style="animation-delay: 4s;"
        >
        </div>
    </div>

    <Navbar />

    <!-- Hero Section - Immersive Full Screen Background -->
    <section class="relative z-10 w-full min-h-screen">
        <!-- BACKGROUND IMAGE - 100% width, 100vh height, immersive -->
        <div class="absolute inset-0 w-full h-full">
            <!-- Main Background Image -->
            <div
                class="absolute inset-0 w-full h-full bg-cover bg-center bg-no-repeat"
                style="background-image: url('/hult-uni-team.png');"
            >
            </div>

            <!-- Magenta/Purple Gradient Overlay for vibrant effect -->
            <div
                class="absolute inset-0 w-full h-full bg-gradient-to-br from-hult-magenta/50 via-hult-purple/40 to-hult-magenta/55 mix-blend-multiply"
            >
            </div>

            <!-- Dark overlay for text readability -->
            <div
                class="absolute inset-0 w-full h-full bg-gradient-to-b from-black/50 via-black/60 to-black/90"
            >
            </div>
        </div>

        <!-- NAVBAR - Fixed, stays visible when scrolling -->

        <!-- CONTENT - Centered vertically and horizontally, z-index above everything -->
        <div
            class="relative z-10 w-full min-h-screen flex items-center justify-center px-4 md:px-6 py-24 md:py-32"
        >
            <div class="container mx-auto px-6 text-center z-10 relative">
                <!-- Main Content -->
                <div class="max-w-4xl mx-auto">
                    <!-- Main Description Card -->
                    <!-- New Radical Hero Content -->
                    <div
                        class="flex flex-col items-center justify-center gap-16 relative"
                    >
                        <!-- 1. Headline -->
                        <h1
                            class="text-3xl md:text-5xl lg:text-7xl font-black text-center hover-fill-text leading-tight drop-shadow-[0_10px_30px_rgba(0,0,0,0.8)] max-w-6xl mx-auto cursor-default"
                        >
                            Transformando el talento técnico de la UNI en
                            soluciones de impacto global.
                        </h1>

                        <!-- 2. Logos -->
                        <div
                            class="flex items-center justify-center gap-8 md:gap-16 flex-wrap"
                        >
                            <!-- Hult Prize Logo -->
                            <div class="flex items-center justify-center group">
                                <img
                                    src="/hult-logo.png"
                                    alt="Hult Prize Logo"
                                    class="h-20 md:h-28 lg:h-36 w-auto object-contain drop-shadow-[0_0_25px_rgba(233,30,140,0.6)] group-hover:scale-110 transition-transform duration-500 ease-out"
                                />
                            </div>

                            <!-- Separator Bar -->
                            <div
                                class="hidden md:block w-px h-24 lg:h-32 bg-gradient-to-b from-transparent via-white/80 to-transparent"
                            >
                            </div>

                            <!-- UNI Logo -->
                            <div class="flex items-center justify-center group">
                                <img
                                    src="/uni-logo.png"
                                    alt="Universidad Nacional de Ingeniería Logo"
                                    class="h-20 md:h-28 lg:h-36 w-auto object-contain drop-shadow-[0_0_25px_rgba(200,50,50,0.6)] group-hover:scale-110 transition-transform duration-500 ease-out"
                                />
                            </div>
                        </div>
                    </div>

                    <!-- CTA Button -->
                    <div class="mt-12">
                        <a
                            href="https://docs.google.com/forms/d/e/1FAIpQLScj15fWnJ35oLOlqTxl-xF5JCh2iz_nIIOjF1M4KkYOHS-p8A/viewform"
                            target="_blank"
                            class="cta-button inline-block px-10 py-4 border-2 border-white text-white font-bold rounded-full relative overflow-hidden text-lg transition-all duration-300 hover:scale-105"
                        >
                            <span class="relative z-10"
                                >Únete al Movimiento</span
                            >
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scroll Indicator - Minimal animated chevron -->
        <a
            href="#objetivos"
            class="absolute bottom-10 left-1/2 -translate-x-1/2 z-20 cursor-pointer"
        >
            <div class="animate-bounce">
                <svg
                    class="w-8 h-8 text-white/60 hover:text-hult-magenta transition-colors"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>
        </a>
    </section>

    <!-- Objetivos Section -->
    <section
        id="objetivos"
        class="py-20 relative z-10 transition-colors duration-500"
    >
        <div class="container mx-auto px-6">
            <!-- Section Title -->
            <div class="text-center mb-16">
                <h2
                    class="text-hult-magenta font-bold tracking-widest uppercase mb-4 text-sm"
                >
                    Nuestros Objetivos
                </h2>
                <h3 class="text-4xl md:text-5xl font-black text-white">
                    ¿Qué nos <span class="text-hult-magenta">Impulsa?</span>
                </h3>
            </div>

            <!-- Objetivos Grid -->
            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto"
            >
                <!-- Objetivo 1 -->
                <div
                    class="bg-white/5 backdrop-blur-md border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all duration-300 group"
                >
                    <div class="flex items-start gap-4">
                        <div
                            class="flex-shrink-0 w-12 h-12 rounded-full bg-hult-magenta/20 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                class="w-6 h-6 text-hult-magenta"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-xl font-bold text-white mb-3">
                                Impulsar la Innovación Social
                            </h4>
                            <p class="text-gray-300 leading-relaxed">
                                Transformar la excelencia técnica de la UNI en
                                startups sostenibles con impacto global.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Objetivo 2 -->
                <div
                    class="bg-white/5 backdrop-blur-md border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all duration-300 group"
                >
                    <div class="flex items-start gap-4">
                        <div
                            class="flex-shrink-0 w-12 h-12 rounded-full bg-hult-magenta/20 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                class="w-6 h-6 text-hult-magenta"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-xl font-bold text-white mb-3">
                                Activar Agentes de Cambio
                            </h4>
                            <p class="text-gray-300 leading-relaxed">
                                Despertar el potencial emprendedor del
                                estudiante para resolver las problemáticas más
                                urgentes del mundo.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Objetivo 3 -->
                <div
                    class="bg-white/5 backdrop-blur-md border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all duration-300 group"
                >
                    <div class="flex items-start gap-4">
                        <div
                            class="flex-shrink-0 w-12 h-12 rounded-full bg-hult-magenta/20 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                class="w-6 h-6 text-hult-magenta"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M12.75 3.03v.568c0 .334.148.65.405.864l1.068.89c.442.369.535 1.01.216 1.49l-.51.766a2.25 2.25 0 01-1.161.886l-.143.048a1.107 1.107 0 00-.57 1.664c.369.555.169 1.307-.413 1.68l-1.225.956a1.5 1.5 0 00-.499 1.177v.141c0 .811-.79 1.402-1.558 1.23a22.586 22.586 0 00-2.586-.235c-.319 0-.612.067-.887.185a.75.75 0 01-.176.06c-.53.15-1.077.306-1.636.467a4.99 4.99 0 01-4.707-.457 21.06 21.06 0 01-2.922-2.827.75.75 0 01-.065-.256c.453-2.006 1.35-3.856 2.597-5.463a15.22 15.22 0 0110.158-6.177c1.336-.092 2.658.118 3.903.626h.001z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M18.75 9.75h.008v.008h-.008V9.75zm0 2.25h.008v.008h-.008V12zm1.5-1.5h.008v.008h-.008V10.5zm0 2.25h.008v.008h-.008V12.75z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M15.75 19.5h6"></path>
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-xl font-bold text-white mb-3">
                                Conectar con el Mundo
                            </h4>
                            <p class="text-gray-300 leading-relaxed">
                                Vincular el talento local con la red de
                                emprendimiento social más grande del planeta.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Objetivo 4 -->
                <div
                    class="bg-white/5 backdrop-blur-md border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all duration-300 group"
                >
                    <div class="flex items-start gap-4">
                        <div
                            class="flex-shrink-0 w-12 h-12 rounded-full bg-hult-magenta/20 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                class="w-6 h-6 text-hult-magenta"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-xl font-bold text-white mb-3">
                                Fomentar el Liderazgo
                            </h4>
                            <p class="text-gray-300 leading-relaxed">
                                Formar una nueva generación de líderes
                                comprometidos con crear soluciones reales y
                                rentables.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Nuestros Logros Section -->
    <section class="py-20 border-t border-white/5 relative z-10">
        <div class="container mx-auto px-6">
            <!-- Section Title -->
            <div class="text-center mb-16">
                <h2
                    class="text-hult-magenta font-bold tracking-widest uppercase mb-4 text-sm"
                >
                    Nuestros Logros
                </h2>
                <h3 class="text-4xl md:text-5xl font-black text-white">
                    El <span class="text-hult-magenta">Impacto</span> en Números
                </h3>
            </div>

            <!-- Logros Grid -->
            <div
                class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto"
            >
                <!-- Logro 1: Equipos Participantes -->
                <div
                    class="bg-white/5 backdrop-blur-md border border-white/10 rounded-3xl p-8 hover:bg-white/10 hover:border-hult-magenta/30 transition-all duration-300 group text-center"
                >
                    <div class="mb-4">
                        <div
                            class="text-5xl md:text-6xl font-black text-hult-magenta group-hover:scale-110 transition-transform duration-300"
                        >
                            43
                        </div>
                    </div>
                    <h4 class="text-lg font-bold text-white mb-2">
                        Equipos Participantes
                    </h4>
                    <p class="text-sm text-gray-400">
                        Innovadores trabajando por el cambio
                    </p>
                </div>

                <!-- Logro 2: Participación Femenina -->
                <div
                    class="bg-white/5 backdrop-blur-md border border-white/10 rounded-3xl p-8 hover:bg-white/10 hover:border-hult-magenta/30 transition-all duration-300 group text-center"
                >
                    <div class="mb-4">
                        <div
                            class="text-5xl md:text-6xl font-black text-hult-magenta group-hover:scale-110 transition-transform duration-300"
                        >
                            33.3%
                        </div>
                    </div>
                    <h4 class="text-lg font-bold text-white mb-2">
                        Participantes Mujeres
                    </h4>
                    <p class="text-sm text-gray-400">
                        Liderando el emprendimiento social
                    </p>
                </div>

                <!-- Logro 3: Alcance en Facultades -->
                <div
                    class="bg-white/5 backdrop-blur-md border border-white/10 rounded-3xl p-8 hover:bg-white/10 hover:border-hult-magenta/30 transition-all duration-300 group text-center"
                >
                    <div class="mb-4">
                        <div
                            class="text-5xl md:text-6xl font-black text-hult-magenta group-hover:scale-110 transition-transform duration-300"
                        >
                            10/11
                        </div>
                    </div>
                    <h4 class="text-lg font-bold text-white mb-2">
                        Facultades de la UNI
                    </h4>
                    <p class="text-sm text-gray-400">
                        Presencia en toda la universidad
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Nuestros Ganadores Section -->
    <section class="py-20 border-t border-white/5 relative z-10">
        <div class="container mx-auto px-6">
            <!-- Section Title -->
            <div class="text-center mb-16">
                <h2
                    class="text-hult-magenta font-bold tracking-widest uppercase mb-4 text-sm"
                >
                    Nuestros Ganadores
                </h2>
                <h3 class="text-4xl md:text-5xl font-black text-white">
                    Historias de <span class="text-hult-magenta">Éxito</span>
                </h3>
                <p class="text-gray-400 mt-4 max-w-2xl mx-auto">
                    Conoce a los equipos ganadores de ediciones anteriores que
                    están transformando el mundo con sus soluciones innovadoras
                </p>
            </div>

            <!-- Ganadores Grid -->
            <div
                class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto"
            >
                <!-- Ganador 1: AKVIRA -->
                <div
                    class="bg-white/5 backdrop-blur-md border border-white/10 rounded-3xl overflow-hidden hover:bg-white/10 hover:border-hult-magenta/30 transition-all duration-300 group"
                >
                    <!-- Image -->
                    <div
                        class="relative h-64 overflow-hidden bg-neutral-900 flex items-center justify-center p-8"
                    >
                        <img
                            src="/winner-akvira.png"
                            alt="AKVIRA - Ganador Hult Prize at UNI"
                            class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>

                    <!-- Content -->
                    <div class="p-6">
                        <h4
                            class="text-2xl font-black text-white mb-3 group-hover:text-hult-magenta transition-colors"
                        >
                            AKVIRA
                        </h4>
                        <p class="text-gray-300 text-sm leading-relaxed">
                            Ante desastres naturales y emergencias, la falta de
                            infraestructura rápida y eficiente dificulta la
                            atención a comunidades vulnerables. AKVIRA surge
                            como una solución innovadora para garantizar
                            espacios seguros y funcionales en tiempo récord,
                            adaptándose a diversas necesidades humanitarias y
                            operativas.
                        </p>
                    </div>
                </div>

                <!-- Ganador 2: Vision Health -->
                <div
                    class="bg-white/5 backdrop-blur-md border border-white/10 rounded-3xl overflow-hidden hover:bg-white/10 hover:border-hult-magenta/30 transition-all duration-300 group"
                >
                    <!-- Image -->
                    <div
                        class="relative h-64 overflow-hidden bg-neutral-900 flex items-center justify-center p-8"
                    >
                        <img
                            src="/winner-visionhealth.png"
                            alt="Vision Health - Ganador Hult Prize at UNI"
                            class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>

                    <!-- Content -->
                    <div class="p-6">
                        <h4
                            class="text-2xl font-black text-white mb-3 group-hover:text-hult-magenta transition-colors"
                        >
                            Vision Health
                        </h4>
                        <p class="text-gray-300 text-sm leading-relaxed">
                            El cáncer de pulmón es el tipo de cáncer más mortal
                            en el mundo, y en Perú, el 70-90% de los casos se
                            diagnostican en etapa avanzada, reduciendo
                            drásticamente las posibilidades de tratamiento
                            exitoso. Vision Health emplea inteligencia
                            artificial para optimizar el diagnóstico a partir de
                            imágenes médicas, brindando una alternativa precisa,
                            rápida y accesible que fortalece los sistemas de
                            salud.
                        </p>
                    </div>
                </div>

                <!-- Ganador 3: PCycler -->
                <div
                    class="bg-white/5 backdrop-blur-md border border-white/10 rounded-3xl overflow-hidden hover:bg-white/10 hover:border-hult-magenta/30 transition-all duration-300 group"
                >
                    <!-- Image -->
                    <div
                        class="relative h-64 overflow-hidden bg-neutral-900 flex items-center justify-center p-8"
                    >
                        <img
                            src="/winner-pcycler.png"
                            alt="PCycler - Ganador Hult Prize at UNI"
                            class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>

                    <!-- Content -->
                    <div class="p-6">
                        <h4
                            class="text-2xl font-black text-white mb-3 group-hover:text-hult-magenta transition-colors"
                        >
                            PCycler
                        </h4>
                        <p class="text-gray-300 text-sm leading-relaxed">
                            El acceso a tecnología biomolecular sigue siendo un
                            reto en Perú. Altos costos, largos tiempos de espera
                            y dependencia de terceros limitan la capacidad de
                            universidades, centros de investigación y
                            laboratorios clínicos para desarrollar diagnósticos
                            eficientes. PCycler es una solución innovadora que
                            permite realizar diagnósticos moleculares accesibles
                            y efectivos, brindando tecnología de calidad a una
                            fracción del costo de los equipos comerciales.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Styles for smooth scroll and animations -->
    <style>
        /* Shared Animations */
        @keyframes pulse-slow {
            0%,
            100% {
                opacity: 0.3;
                transform: scale(1);
            }
            50% {
                opacity: 0.6;
                transform: scale(1.1);
            }
        }
        @keyframes twinkle {
            0%,
            100% {
                opacity: 0.2;
                transform: scale(0.8);
            }
            50% {
                opacity: 1;
                transform: scale(1.2);
                box-shadow: 0 0 15px rgba(233, 30, 140, 0.8);
            }
        }
        .animate-pulse-slow {
            animation: pulse-slow 8s infinite ease-in-out;
        }
        .animate-twinkle {
            animation: twinkle 3s infinite ease-in-out;
        }
        .box-shadow-glow {
            box-shadow: 0 0 10px var(--color-hult-magenta);
        }

        html {
            scroll-behavior: smooth;
        }

        .fade-in-up {
            opacity: 0;
            transform: translateY(30px);
            transition:
                opacity 0.6s ease-out,
                transform 0.6s ease-out;
        }

        .fade-in-up.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .cta-button::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #e6007e; /* Hult Magenta */
            transform: scaleY(0);
            transform-origin: top;
            transition: transform 0.4s ease-in-out;
            z-index: 0;
        }

        .cta-button:hover::before {
            transform: scaleY(1);
        }

        /* Hover Fill Text Animation (Top to Bottom) */
        .hover-fill-text {
            color: transparent;
            -webkit-text-stroke: 1px rgba(255, 255, 255, 0.3); /* Optional: keeps a thin outline to maintain legibility inside letters */
            background-image: linear-gradient(
                to bottom,
                #e6007e 50%,
                #ffffff 50%
            );
            background-size: 100% 200%;
            background-position: 0 100%; /* Start at bottom (White) */
            -webkit-background-clip: text;
            background-clip: text;
            transition: background-position 0.5s ease-out;
        }

        .hover-fill-text:hover {
            background-position: 0 0; /* Move to top (Magenta) */
            -webkit-text-stroke: 0px transparent;
        }
    </style>

    <!-- Scripts for scroll effects and animations -->
    <script>
        // Intersection Observer for fade-in animations
        const observerOptions = {
            root: null,
            rootMargin: "0px",
            threshold: 0.1,
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("visible");
                }
            });
        }, observerOptions);

        // Wait for DOM to be ready
        document.addEventListener("DOMContentLoaded", () => {
            // Add fade-in-up class to all animated sections
            const animatedElements = document.querySelectorAll(
                "#objetivos > div > div > div > div, " + // Objetivos cards
                    'section[id="objetivos"] + section > div > div > div, ' + // Logros metrics
                    'section:has(h2:contains("Ganadores")) > div > div > div', // Ganadores cards
            );

            animatedElements.forEach((el) => {
                el.classList.add("fade-in-up");
                observer.observe(el);
            });

            // More specific selectors for better targeting
            const objetivosCards = document.querySelectorAll(
                "#objetivos .bg-white\\/5",
            );
            const logrosCards = document.querySelectorAll(
                "#objetivos + section .bg-white\\/5",
            );
            const ganadoresCards = document.querySelectorAll(
                "section:last-of-type .bg-white\\/5",
            );

            [...objetivosCards, ...logrosCards, ...ganadoresCards].forEach(
                (card, index) => {
                    card.classList.add("fade-in-up");
                    (card as HTMLElement).style.transitionDelay =
                        `${index * 0.1}s`;
                    observer.observe(card);
                },
            );
        });
    </script>
</Layout>
