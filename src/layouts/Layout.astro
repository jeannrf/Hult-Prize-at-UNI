---
import "../styles/global.css";

import Footer from "../components/Footer.astro"; // Import Footer

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Hult Prize at UNI 2026 - El concurso de emprendimiento social más grande del mundo en la Universidad Nacional de Ingeniería."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700;900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-hult-black text-white selection:bg-hult-magenta selection:text-white"
  >
    <div
      class="fixed inset-0 -z-10 pointer-events-none"
      style="background: radial-gradient(ellipse 100% 80% at 50% 0%, rgba(233,30,140,0.4) 0%, transparent 60%);"
    >
    </div>

    <slot />
    <Footer />
  </body>
</html>
